CREATE DATABASE resto_db;

USE resto_db;

CREATE TABLE makanan (
  id INT AUTO_INCREMENT PRIMARY KEY,
  nama VARCHAR(100),
  harga INT
);

CREATE TABLE minuman (
  id INT AUTO_INCREMENT PRIMARY KEY,
  nama VARCHAR(100),
  harga INT
);

CREATE TABLE orders (
  id INT AUTO_INCREMENT PRIMARY KEY,
  nama VARCHAR(100),
  jumlah INT,
  harga INT
);

-- Tambahkan beberapa data awal
INSERT INTO makanan (nama, harga) VALUES 
